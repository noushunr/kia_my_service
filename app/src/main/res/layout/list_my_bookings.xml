<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_4"
            app:cardElevation="@dimen/margin_2"
            app:cardCornerRadius="@dimen/margin_16">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_8"
                android:background="@color/darkBlue">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/list_my_booking_service_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        tools:text="Car Electric Work"
                        android:padding="@dimen/margin_8"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_16"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/serviceapp" />

                        <TextView
                            android:id="@+id/list_my_booking_date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="November 17"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_8"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_time" />

                        <TextView
                            android:id="@+id/list_my_booking_slot_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12.30 PM"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_8"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/location" />

                        <TextView
                            android:id="@+id/list_my_booking_center_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6th Street, Shuwaikh Industrail"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_8"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="@color/white"
                            app:srcCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/list_my_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/map"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />
                        <TextView
                            android:id="@+id/list_my_map_click"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/click"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>