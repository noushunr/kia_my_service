<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_10"
            app:cardElevation="@dimen/margin_2"
            app:cardCornerRadius="@dimen/margin_16">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_8"
                android:background="@color/darkBlue">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/list_vehicle_history_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Car Electric Work"
                        android:padding="@dimen/margin_8"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/list_vehicle_history_order_id_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10-95786"
                        android:padding="@dimen/margin_8"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/date_vh" />

                        <TextView
                            android:id="@+id/list_vehicle_history_date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="November 17"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/contactus" />

                        <TextView
                            android:id="@+id/list_vehicle_history_slot_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12.30 PM"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/plate_vh" />

                        <TextView
                            android:id="@+id/list_vehicle_history_plate_no_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="KL 01 CR 007"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/vin_vh" />

                        <TextView
                            android:id="@+id/list_vehicle_history_vin_no_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="ATR007"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/location" />

                        <TextView
                            android:id="@+id/list_vehicle_history_center_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6th Street, Shuwaikh Industrail"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/contactus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ord9678"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/contactus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="9654"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/desc_vh" />

                        <TextView
                            android:id="@+id/list_vehicle_history_description_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="One of the signs that a compressor may be having trouble is the AC no longer blowing as clod as it once did."
                            android:layout_marginStart="@dimen/margin_8"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_8"
                        android:gravity="start|center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/price_vh" />

                        <TextView
                            android:id="@+id/list_vehicle_history_price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_8"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:text="KD 1000" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>